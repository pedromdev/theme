<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/5.2/phpunit.xsd"
    bootstrap="./tests/Bootstrap.php"
    colors="true"
    stopOnFailure="false">
    <testsuites>
        <testsuite name="view-helpers">
            <directory>./tests/ThemeTest/View/</directory>
        </testsuite>
        <testsuite name="asset-manager">
            <directory>./tests/ThemeTest/AssetManager/</directory>
            <directory>./tests/ThemeTest/AssetManager/Asset/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>./src/</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="./tests/tmp/coverage.html" lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-text" target="php://stdout"/>
        <log type="testdox-text" target="./tests/tmp/testdox.txt"/>
    </logging>
</phpunit>